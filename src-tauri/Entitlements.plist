<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Required for App Sandbox -->
    <key>com.apple.security.app-sandbox</key>
    <true/>
    
    <!-- Allow network client for potential future features -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- iCloud Documents capability -->
    <key>com.apple.developer.icloud-container-identifiers</key>
    <array>
        <string>iCloud.com.extranuts.app</string>
    </array>
    
    <!-- iCloud Documents storage -->
    <key>com.apple.developer.ubiquity-container-identifiers</key>
    <array>
        <string>iCloud.com.extranuts.app</string>
    </array>
    
    <!-- Allow read/write to user-selected files -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
</dict>
</plist>