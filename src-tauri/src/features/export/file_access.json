{
  "$schema": "../../gen/schemas/plugin-schema.json",
  "identifier": "file-access-vault",
  "description": "Allows access to the user's selected Obsidian vault",
  "permissions": [
    {
      "identifier": "fs:allow-write-file",
      "allow": [
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-create",
      "allow": [
        {
          "path": "$HOME/**"
        }
      ]
    }
  ]
}